params {
    data = ""                            // Data file path
    output = ""                          // Output directory path
    threads = 10                         // Number of threads (default: 10)
    lcompleteness = 50                    // Gene completeness threshold (default: 50)
    coverage = 0.5                       // Coverage threshold (default: 0.5)
    soft_clipping = 5                    // Soft-clipping value (default: 5)
    tax_id = ""                          // Taxonomic ID
    genomes = 100                        // Number of genomes to download (default: 100)
    clustering = 0.95                    // Clustering threshold (default: 0.95)
    core = 0.01                          // Core genome threshold (default: 0.01)
    clean_mode = 'strict'                // Pangenome clean mode (default: strict)
    help = false                         // Display help
}

manifest {
    name = 'aPBA'
    description = 'Automated pipeline for ancient bacterial pangenome analyss'
    version = '1.0'
}
